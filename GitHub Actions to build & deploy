name: Build and Deploy Pages
on:
  push:
    branches: [ main ]
  workflow_dispatch:

permissions:
  contents: read
  pages: write
  id-token: write

concurrency:
  group: "pages"
  cancel-in-progress: true

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      # If you have a Node build, uncomment:
      # - uses: actions/setup-node@v4
      #   with:
      #     node-version: 20
      # - run: npm ci && npm run build
      # - run: cp -r dist/* ./_site
      # For static content already in repo root, create _site and copy:
      - run: mkdir -p _site && cp -r * _site || true
      - uses: actions/upload-pages-artifact@v3
        with:
          path: _site

  deploy:
    needs: build
    runs-on: ubuntu-latest
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    steps:
      - id: deployment
        uses: actions/deploy-pages@v4
